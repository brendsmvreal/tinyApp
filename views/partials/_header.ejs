<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        <a class="nav-item nav-link" href="/register">Register</a>
      </div>
    </div>
    <% if (user) { %>
      <form class="form-inline" method="POST" action="/logout">
        <label for="user">Logged in as: <%= user.email %>&nbsp</label> 
        <button type="submit" class="btn btn-outline-dark btn-success">Logout</button>
      </form>
    <% } else { %>
      <form class="form-inline" method="POST" action="/login">
        <div class="form-group mb-2">
          <label for="user"></label>
          <input class="form-control" name="user" type="text" placeholder="Username" id="user" value="<%= user %>">&nbsp<button type="submit" class="btn btn-outline-dark btn-success">Login</button>
        </div>
      </form>
    <% } %>
  </nav>
</header>